<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/color999"
        tools:text="日期"
        android:minEms="4"
        android:paddingEnd="20dp"
        android:gravity="center"
        android:textSize="20sp"/>
    <View
        android:id="@+id/iv_point"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/selector_home_point"
        app:layout_constraintStart_toEndOf="@id/tv_time"
        app:layout_constraintTop_toTopOf="@id/tv_time"
        app:layout_constraintBottom_toBottomOf="@id/tv_time"/>
    <ImageView
        android:id="@+id/iv_category"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@color/black"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/tv_time"
        app:layout_constraintBottom_toBottomOf="@id/tv_time"
        app:layout_constraintStart_toEndOf="@id/iv_point"/>
    <TextView
        android:id="@+id/tv_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_category"
        android:layout_marginStart="20dp"
        tools:text="类别"
        android:textSize="18sp"
        android:textColor="@color/color333"
        app:layout_constraintTop_toTopOf="@id/tv_time"
        app:layout_constraintBottom_toBottomOf="@id/tv_time"/>
    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_category"
        android:layout_marginStart="20dp"
        tools:text="0.00"
        android:textSize="22sp"
        android:textColor="@color/income_color"
        app:layout_constraintTop_toBottomOf="@id/tv_time"/>
    <TextView
        android:id="@+id/tv_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_category"
        android:layout_marginStart="20dp"
        tools:text="暂无备注~"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textSize="16sp"
        android:textColor="@color/color999"
        app:layout_constraintTop_toBottomOf="@id/tv_money"/>
    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_time"
        app:layout_constraintStart_toStartOf="@id/iv_point"
        app:layout_constraintEnd_toEndOf="@id/iv_point"
        android:background="@color/color999"/>
</androidx.constraintlayout.widget.ConstraintLayout>