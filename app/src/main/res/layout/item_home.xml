<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="15dp"
    android:paddingStart="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/color999"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_category"
        android:layout_width="50dp"
        android:src="@color/color333"
        android:layout_height="50dp"
        app:riv_oval="true"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tv_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_category"
        app:layout_constraintStart_toEndOf="@id/iv_category"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="名字"
        android:textColor="@color/color333"
        android:textSize="16sp"
        android:paddingStart="15dp" />
    <TextView
        android:id="@+id/tv_money"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_category"
        app:layout_constraintStart_toEndOf="@id/iv_category"
        app:layout_constraintBottom_toBottomOf="@id/iv_category"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="0.00"
        android:textColor="@color/color333"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:paddingStart="15dp" />
    <TextView
        android:id="@+id/tv_remark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_money"
        app:layout_constraintStart_toEndOf="@id/iv_category"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/color999"
        android:textSize="14sp"
        android:paddingTop="5dp"
        android:gravity="center_vertical"
        android:paddingStart="15dp"
        android:hint="暂无备注~"/>
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="@id/iv_category"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_category"
        app:riv_corner_radius="5dp"
        android:src="@color/color666"/>
</androidx.constraintlayout.widget.ConstraintLayout>